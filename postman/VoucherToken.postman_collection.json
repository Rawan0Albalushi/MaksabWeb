									"key": "used_by",
									"value": "2",
									"description": "Filter by user who used the token"
								},
								{
									"key": "sort",
									"value": "desc",
									"description": "Sort order: asc, desc"
								},
								{
									"key": "column",
									"value": "created_at",
									"description": "Sort column: id, amount, created_at, expires_at, etc."
								}
