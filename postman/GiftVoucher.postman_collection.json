{
	"info": {
		"_postman_id": "gift-voucher-collection",
		"name": "Gift Voucher APIs",
		"description": "Collection of APIs for Gift Voucher functionality",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "List Gift Vouchers",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/dashboard/user/gift-voucher",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "dashboard", "user", "gift-voucher"]
				},
				"description": "Get list of gift vouchers for the authenticated user"
			},
			"response": []
		},
		{
			"name": "Create Gift Voucher",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"amount\": 100,\n    \"recipient_phone_number\": \"+96812345678\",\n    \"payment_id\": 1,\n    \"message\": \"Happy Birthday!\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/dashboard/user/gift-voucher",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "dashboard", "user", "gift-voucher"]
				},
				"description": "Create a new gift voucher"
			},
			"response": []
		},
		{
			"name": "Redeem Gift Voucher",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"voucher_code\": \"123e4567-e89b-12d3-a456-426614174000\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/dashboard/user/gift-voucher/redeem",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "dashboard", "user", "gift-voucher", "redeem"]
				},
				"description": "Redeem a gift voucher to wallet"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "token",
			"value": "your-auth-token",
			"type": "string"
		}
	]
} 